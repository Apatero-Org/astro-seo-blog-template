---
// Hero Section Component - Bold, Centered Design
---

<section class="min-h-screen bg-background relative overflow-hidden flex items-center">
  <div class="container relative z-10 w-full py-16">
    <!-- Centered Content -->
    <div class="max-w-5xl mx-auto text-center">
      <!-- Main Headline -->
      <h1 class="text-5xl sm:text-6xl md:text-7xl lg:text-8xl xl:text-9xl font-display font-bold mb-8 leading-none tracking-tight">
        BUILD.<br>
        <span class="text-text-muted">PUBLISH.</span><br>
        SCALE.
      </h1>

      <!-- Subheadline -->
      <p class="text-xl sm:text-2xl md:text-3xl lg:text-4xl text-text-muted mb-4 leading-tight max-w-4xl mx-auto font-light">
        The modern blog template built for speed,
      </p>
      <p class="text-xl sm:text-2xl md:text-3xl lg:text-4xl text-text mb-12 leading-tight max-w-4xl mx-auto font-bold">
        SEO, and developers who ship.
      </p>

      <!-- Feature Keywords -->
      <div class="flex flex-wrap items-center justify-center gap-4 sm:gap-6 mb-12 text-sm sm:text-base md:text-lg">
        <span class="text-text-muted">TypeScript</span>
        <span class="text-text-muted/30">•</span>
        <span class="text-text-muted">Astro 5</span>
        <span class="text-text-muted/30">•</span>
        <span class="text-text-muted">Dark Mode</span>
        <span class="text-text-muted/30">•</span>
        <span class="text-text-muted">MDX</span>
        <span class="text-text-muted/30">•</span>
        <span class="text-text-muted">Zero Config</span>
      </div>

      <!-- CTA Buttons -->
      <div class="flex flex-col sm:flex-row gap-4 justify-center mb-8">
        <a href="https://github.com/Apatero-Org/astro-seo-blog-template" target="_blank" class="bg-text text-background px-10 py-5 rounded-full font-bold text-lg transition-all hover:bg-text/90 hover:scale-105 inline-flex items-center justify-center gap-3">
          GET STARTED
          <svg width="20" height="20" viewBox="0 0 20 20" fill="none" xmlns="http://www.w3.org/2000/svg">
            <path d="M4 10H16M16 10L11 5M16 10L11 15" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"/>
          </svg>
        </a>
        <a href="https://apatero.com/blog" target="_blank" class="border-2 border-text text-text px-10 py-5 rounded-full font-bold text-lg transition-all hover:bg-text hover:text-background inline-block text-center">
          VIEW DEMO
        </a>
      </div>

      <!-- Meta Info -->
      <p class="text-sm text-text-muted/60">
        Open source • MIT License • Built by <a href="https://apatero.com" class="hover:text-text transition-colors underline">Apatero</a>
      </p>
    </div>

    <!-- Large Feature Stats -->
    <div class="max-w-4xl mx-auto mt-20 grid grid-cols-1 sm:grid-cols-3 gap-8 text-center">
      <div class="group">
        <div class="text-4xl sm:text-5xl font-display font-bold mb-2 group-hover:scale-110 transition-transform">100</div>
        <div class="text-sm text-text-muted uppercase tracking-wider">Lighthouse Score</div>
      </div>
      <div class="group">
        <div class="text-4xl sm:text-5xl font-display font-bold mb-2 group-hover:scale-110 transition-transform">&lt;1s</div>
        <div class="text-sm text-text-muted uppercase tracking-wider">Load Time</div>
      </div>
      <div class="group">
        <div class="text-4xl sm:text-5xl font-display font-bold mb-2 group-hover:scale-110 transition-transform">0</div>
        <div class="text-sm text-text-muted uppercase tracking-wider">Configuration</div>
      </div>
    </div>
  </div>

  <!-- Animated Background Lines -->
  <div class="absolute inset-0 overflow-hidden pointer-events-none">
    <!-- Horizontal Lines -->
    <div class="absolute top-1/4 left-0 w-full h-px bg-text opacity-5"></div>
    <div class="absolute top-1/2 left-0 w-full h-px bg-text opacity-10"></div>
    <div class="absolute top-3/4 left-0 w-full h-px bg-text opacity-5"></div>

    <!-- Vertical Lines -->
    <div class="absolute top-0 left-1/4 w-px h-full bg-text opacity-5"></div>
    <div class="absolute top-0 left-1/2 w-px h-full bg-text opacity-10"></div>
    <div class="absolute top-0 left-3/4 w-px h-full bg-text opacity-5"></div>
  </div>

  <!-- Corner Accents -->
  <div class="absolute inset-0 pointer-events-none overflow-hidden">
    <!-- Top Left Corner -->
    <div class="absolute top-0 left-0 w-32 h-32 border-l-2 border-t-2 border-text opacity-20"></div>
    <!-- Top Right Corner -->
    <div class="absolute top-0 right-0 w-32 h-32 border-r-2 border-t-2 border-text opacity-20"></div>
    <!-- Bottom Left Corner -->
    <div class="absolute bottom-0 left-0 w-32 h-32 border-l-2 border-b-2 border-text opacity-20"></div>
    <!-- Bottom Right Corner -->
    <div class="absolute bottom-0 right-0 w-32 h-32 border-r-2 border-b-2 border-text opacity-20"></div>
  </div>
</section>
